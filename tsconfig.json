{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "declaration": false,
        "noLib": false,
        "noEmitHelpers": true,
        "experimentalDecorators": true,
	    "noEmitOnError": false,
        "lib": [
            "es6",
            "dom"
        ],
        "baseUrl": ".",
        "paths": {
            "*": [
                "./demo/node_modules/tns-core-modules/*",
                "./demo/node_modules/*"
            ]
        }
    },
    "typeRoots": [
            "./node_modules/@types",
            "./node_modules"
        ],
    "files": [
        "src/videoplayer-common.ts",
        "src/videoplayer.ios.ts",
        "src/videoplayer.android.ts",
        "src/video-source/video-source-common.ts",
        "src/video-source/video-source.ios.ts",
        "src/video-source/video-source.android.ts",
        "src/subtitle-source/subtitle-source-common.ts",
        "src/subtitle-source/subtitle-source.ios.ts",
        "src/subtitle-source/subtitle-source.android.ts"
    ],
    "exclude": [
        "node_modules",
        "platforms"
    ]
}